{% extends "admin/base.html.twig" %}

{% block title %}
    {% if form.vars.value.codeclasse is null %}
        Nouvelle classe
    {% else %}
        Modification de la classe {{ form.vars.value.nomclasse }}
    {% endif %}

{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {{ form_row(form.nomclasse) }}
            {{ form_row(form.description) }}
            {{ form_row(form.dateDebStage) }}
            {{ form_row(form.dateFinStage) }}
            {{ form_row(form.codegroupeldap) }}

            <button type="submit" class="btn btn-primary btn-block" >Valider</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}
