{% extends "admin/base.html.twig" %}

{% block title %}Classes{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-body">
            {% if form.vars.value.codeclasse is null %}
                <h1>Nouvelle Classe</h1>
            {% else %}
                <h1>Modification de la Classe</h1>
            {% endif %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group form-inline row">
                {{ form_label(form.nomclasse, "Nom (*)", {'label_attr': {'class': "col-4"}}) }}
                {{ form_widget(form.nomclasse, {'attr': {'class': "form-control col-5"}}) }}
                {{ form_errors(form.nomclasse) }}
            </div>


            <div class="form-group form-inline row">
                {{ form_label(form.description, "Description(*)", {'label_attr': {'class': "col-4"}}) }}
                {{ form_widget(form.description, {'attr': {'class': "form-control col-5"}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="btn-group" role="group" aria-label="...">
                <button type="submit" class="btn btn-primary" >Valider</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}