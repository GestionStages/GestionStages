{% extends "admin/base.html.twig" %}

{% block title %}Classes{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            <h1 class="my-4">Liste Classes</h1>
            <a href="{{ path('addClasse') }}" class="btn btn-sm btn-success">
                <i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter
            </a>
            <table class="table table-striped table-middle-aligned">
                <thead>
                <tr>
                    <th scope="col">Nom Classes</th>
                    <th scope="col">Description Classes</th>
                    <th scope="col" class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for uneClasse in classes %}
                    <tr>
                        <td>{{ uneClasse.nomclasse}}</td>
                        <td>{{ uneClasse.description }}</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ path('editClasse', {'id':uneClasse.codeclasse}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Editer
                                </a>
                                <a href="" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteClasseModal-{{ uneClasse.codeclasse }}">
                                    <i class="fa fa-trash" aria-hidden="true"></i> Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% include "/admin/classes/modals/deleteClasseModal.html.twig" %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
