{% extends "admin/base.html.twig" %}

{% block title %}Domaines d'activités{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            <h1 class="my-4">Liste des domaines d'activites</h1>
            <a href="{{ path('addDomaineActivite') }}" class="btn btn-sm btn-success">
                <i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter
            </a>
            <table class="table table-striped table-middle-aligned">
                <thead>
                <tr>
                    <th scope="col">Nom domaines Activités</th>
                    <th scope="col" class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for unDomaineActivite in domainesActivites %}
                    <tr>
                        <td>{{ unDomaineActivite.nomdomaine}}</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ path('editDomaineActivite', {'id': unDomaineActivite.codedomaine}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Editer
                                </a>
                                <a href="" class="btn btn-sm btn-danger"  data-toggle="modal" data-target="#deleteDomaineModal-{{ unDomaineActivite.codedomaine }}">
                                    <i class="fa fa-trash" aria-hidden="true"></i> Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% include "/admin/domainesActivites/modals/deleteDomaineActiviteModal.html.twig" %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
