{% extends "admin/base.html.twig" %}

{% block title %}Propositions en attente{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            <table id="propositionsTable" class="table table-bordered">
                <thead>
                <tr>
                    <th>Statut</th>
                    <th>Titre</th>
                    <th>Entreprise</th>
                    <th>Description</th>
                    <th>Commentaire</th>
                    <th>Post√©e le</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for uneProposition in propositions  %}
                    <tr>

                        <td align="center">{{ uneProposition.codeEtat.nomEtat }}<br/><br/>{% if (uneProposition.codeEtat.codeEtat == 1) %}<div id="cercleAttente"></div>{% endif %}
                            {% if (uneProposition.codeEtat.codeEtat == 2) %}<div id="cercleValid"></div>{% endif %}
                            {% if (uneProposition.codeEtat.codeEtat == 3) %}<div id="cercleAffecte"></div>{% endif %}
                            {% if (uneProposition.codeEtat.codeEtat == 4) %}<div id="cercleArchive"></div>{% endif %}
                            {% if (uneProposition.codeEtat.codeEtat == 5) %}<div id="cercleRefuse"></div>{% endif %}</td>
                        <td>{{ uneProposition.titreproposition }}</td>
                        <td>{{ uneProposition.codeentreprise.nomentreprise }}</td>
                        <td>{{ uneProposition.descriptionproposition }}</td>
                        <td>{{ uneProposition.commentaire }}</td>
                        <td>{{ uneProposition.dateajout|date("d/m/Y") }}</td>
                        <td>
                            {% if uneProposition.codeEtat.codeEtat != 3 %}
                                {% if uneProposition.codeEtat.codeEtat != 2 %}
                                    <a href="{{ path('validProposition', {'id': uneProposition.codeproposition}) }}" class="btn btn-success">Valider</a><br/>
                                {% endif %}
                                {% if uneProposition.codeEtat.codeEtat != 5 %}
                                    <a href="{{ path('rejectProposition', {'id': uneProposition.codeproposition}) }}" class="btn btn-danger">Refuser</a><br/>
                                {% endif %}
                                {% if uneProposition.codeEtat.codeEtat != 4 %}
                                    <a href="{{ path('archiveProposition', {'id': uneProposition.codeproposition}) }}" class="btn btn-info">Archiver</a>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#propositionsTable').DataTable({
                "language": {
                    "url": "{{ asset('js/datatables-french.json') }}"
                }
            });
        });
    </script>
{% endblock %}