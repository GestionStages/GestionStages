{% extends "admin/base.html.twig" %}

{% block title %}Modifier {{ form.vars.value.nomProf | upper }} {{ form.vars.value.prenomProf | capitalize }}{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {{ form_row(form.userProf) }}
            {{ form_row(form.passProf) }}
            {{ form_row(form.confirmPassProf) }}

            <hr>

            {{ form_row(form.nomProf) }}
            {{ form_row(form.prenomProf) }}
            {{ form_row(form.mailProf) }}
            {{ form_row(form.telProf) }}

            <button type="submit" class="btn btn-primary btn-block" >Envoyer</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}