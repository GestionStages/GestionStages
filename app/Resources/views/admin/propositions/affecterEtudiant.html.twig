{% extends "admin/base.html.twig" %}

{% block title %}Affectation d'un étudiant{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-body">
            <form action="" method="post">
                <h4>Proposition : {{ proposition.titreProposition }} ({{ proposition.codeEntreprise.nomEntreprise }})</h4><br/>
                <div>
                    <label for="etudiants" class="title">Selectionnez un étudiant</label>
                    <select name="etudiant" >
                        {% for unEtudiant in etudiants %}
                        <option value="{{ unEtudiant.id }}">{{ unEtudiant.nomEtudiant }} {{ unEtudiant.prenomEtudiant }}</option>
                        {% endfor %}
                    </select>
                </div>
                <br/>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="submit" class="btn btn-primary" >Valider</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
