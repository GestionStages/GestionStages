{% extends "admin/base.html.twig" %}

{% block title %}Affectation d'un Professeur (Tuteur){% endblock %}

{% block body %}

    <div class="box">
        <div class="box-body">
            <form action="" method="post">
                <h4>Proposition : {{ proposition.titreProposition }} ({{ proposition.codeEntreprise.nomEntreprise }})</h4><br/>
                <div>
                    <label for="etudiants" class="title">Selectionnez un Professeur</label>
                    <select name="professeur" >
                        {% for unProf in professeurs %}
                        <option value="{{ unProf.id }}">{{ unProf.nomProf }} {{ unProf.prenomProf }}</option>
                        {% endfor %}
                    </select>
                </div>
                <br/>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="submit" class="btn btn-primary" >Valider</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
