{% extends "admin/base.html.twig" %}

{% block title %}Affectation d'un Professeur (Tuteur){% endblock %}

{% block body %}

    <div class="box">
        <div class="box-body">
            <form action="" method="post">
                <h4>Proposition : {{ proposition.titreProposition }} ({{ proposition.codeEntreprise.nomEntreprise }})</h4>

                <div class="form-group">
                    <label for="etudiants" class="title">Selectionnez un professeur</label><br/>
                    <select name="professeur" >
                        {% for unProf in professeurs %}
                        <option value="{{ unProf.id }}">{{ unProf.nomProf | upper }} {{ unProf.prenomProf | capitalize }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button type="submit" class="btn btn-primary btn-block" >Valider</button>
            </form>
        </div>
    </div>
{% endblock %}
