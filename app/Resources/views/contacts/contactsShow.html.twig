{% extends "base.html.twig" %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                </br></br>
                <h1 class="my-4">Liste Contacts ({{ entreprise.nomentreprise }})</h1>

                <div class="card my-4">
                    <a href="{{ path('showEntreprises') }}" class="btn btn-sm btn-success">
                        <i class="fa fa-mail-reply" aria-hidden="true"></i> Retour Ã  la liste des Entreprises
                    </a>
                </div>

                <a href="{{ path('addContact') }}" class="btn btn-sm btn-info">
                    <i class="fa fa-user-plus" aria-hidden="true"></i> Nouveau Contact
                </a>

                {% include  '/contacts/modals/addContactModal.html.twig'%}

                <table class="table table-striped table-middle-aligned">
                    <thead>
                    <tr>
                        <th scope="col">Contact</th>
                        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for unContact in contacts %}
                        <tr>
                            <td>{{ unContact.nomcontact}} {{ unContact.prenomcontact }}</td>
                            <td class="text-right">
                                <div class="item-actions">
                                    <a href="" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#editContactModal">
                                        <i class="fa fa-edit" aria-hidden="true"></i> Editer
                                    </a>

                                    {% include  '/contacts/modals/deleteContactModal.html.twig'%}
                                    {% include  '/contacts/modals/editContactModal.html.twig'%}

                                    <a href="" class="btn btn-sm btn-warning" data-toggle="modal" data-target="#deleteContactModal">
                                        <i class="fa fa-trash" aria-hidden="true"></i> Supprimer
                                    </a>
                                </div>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
