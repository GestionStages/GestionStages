{% extends "base.html.twig" %}

{% block title %}Inscription Contact Entreprise{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            <form action="" method="post">
                <h4>Inscription de {{ contact.nomContact }} {{ contact.prenomContact }}</h4><br/>
                <div>
                    <label for="email" class="title">Email</label>
                    <input type="text" id="email" name="email" readonly="true" value="{{ contact.mailContact }}">
                </div>
                <div>
                    <label for="password" class="title">Mot de passe</label>
                    <input type="password" id="password" name="password">
                </div>
                <div>
                    <label for="password2" class="title">Verification Mot de Passe</label>
                    <input type="password" id="password2" name="password2">
                </div>
                <br/>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="submit" class="btn btn-primary" >Valider</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
