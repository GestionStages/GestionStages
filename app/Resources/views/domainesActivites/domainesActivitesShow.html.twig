{% extends "base.html.twig" %}

{% block title %}Domaines d'activités{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">Liste des domaines d'activites</h1>
                <table class="table table-striped table-middle-aligned">
                    <thead>
                    <tr>
                        <th scope="col">Nom domaines Activités</th>
                        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions
                            <a href="{{ path('addDomaineActivite') }}" class="btn btn-sm btn-success"> Add </a></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for unDomaineActivite in domainesActivites %}
                        <tr>
                            <td>{{ unDomaineActivite.nomdomaine}}</td>
                            <td class="text-right">
                                <div class="item-actions">
                                    <a href="{{ path('editDomaineActivite', {'id':unDomaineActivite.codedomaine}) }}" class="btn btn-sm btn-primary">
                                        <i class="fa fa-edit" aria-hidden="true"></i> Editer
                                    </a>
                                    <a href="{{ path('deleteDomaineActivite', {'id':unDomaineActivite.codedomaine}) }}" class="btn btn-sm btn-danger">
                                        <i class="fa fa-edit" aria-hidden="true"></i> Supprimer
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
