{% extends "base.html.twig" %}

{% block title %}Entreprises BlackList{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                </br></br>
                <h1 class="my-4">BlackList Entreprises</h1>
                <table class="table table-striped table-middle-aligned">
                    <thead>
                    <tr>
                        <th scope="col">Nom Entreprises</th>
                        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for uneEntreprise in entreprises %}
                        <tr>
                            <td>{{ uneEntreprise.nomentreprise}}</td>
                            <td class="text-right">
                                <div class="item-actions">
                                    <a href="{{ path('noBlackListEntreprise', {'id':uneEntreprise.codeentreprise}) }}" class="btn btn-sm btn-dark">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Non BlackList
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

            <div class="col-md-4">
                <div class="card my-4">
                    <a href="{{ path('showEntreprises') }}" class="btn btn-sm btn-success">
                        <i class="fa fa-mail-reply" aria-hidden="true"></i> Retour Entreprises
                    </a>

                </div>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
