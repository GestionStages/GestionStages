{% extends "login/base.html.twig" %}

{% block form %}
    <form action="" method="post">
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Nom d'utilisateur" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Mot de passe" name="_password"/>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-flat">Connexion</button>
    </form>
{% endblock %}