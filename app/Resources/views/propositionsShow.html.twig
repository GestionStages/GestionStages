{% extends "base.html.twig" %}

{% block title %}Liste des offres{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">Lister les Propositions</h1>
                <table id="propositionsTable" class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Entreprise</th>
                        <th>Description</th>
                        <th>Post√©e le</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for uneProposition in propositions  %}
                        <tr>
                            <td>{{ uneProposition.titreproposition }}</td>
                            <td>{{ uneProposition.codeentreprise.nomentreprise }}</td>
                            <td>{{ uneProposition.descriptionproposition }}</td>
                            <td>{{ uneProposition.dateajout|date("d/m/Y") }}</td>
                            <td><a href="{{ path('afficherPropositionbyid', {'id': uneProposition.codeproposition}) }}">Lire plus...</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Search</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
                        </div>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    {% for unDomaineActivite in domaineActivites  %}
                                        <li>
                                            <a href="#">{{ unDomaineActivite.nomdomaine }} </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Side Widget</h5>
                    <div class="card-body">
                        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                    </div>
                </div>

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready( function () {
            $('#propositionsTable').DataTable({
                "language": {
                    "url": "{{ asset('js/datatables-french.json') }}"
                }
            });
        });
    </script>
{% endblock %}